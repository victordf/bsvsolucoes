                                <img src="{{ RAIZ }}{{ port.bpturl }}" alt=""></div>
                            <div class="mask text-center">
                                <h3>{{ port.bpttitulo }}</h3>
                                <h4>{{ port.bptsubtitulo }}</h4>
                                <a href="{{ port.bptlink }}" target="_blank"><i class="fa fa-link"></i></a>
                                <a href="{{ RAIZ }}{{ port.bpturl }}" data-gallery="prettyPhoto"><i class="fa fa-search-plus"></i></a>
